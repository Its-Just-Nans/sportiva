---
import Activity from "../components/Activity.astro";
import Layout from "../layouts/Layout.astro";

import { activities, user } from "../data";
import Profile from "../components/Profile.astro";
import Misc from "../components/Misc.astro";
---

<Layout title="Sportiva">
    <header>
        <img src="sportiva.png" alt="Sportiva" />
        <nav>
            <ul>
                <li>Dashboard</li>
                <li>Training</li>
                <li>Maps</li>
                <li>Challenges</li>
            </ul>
        </nav>
        <button>
            <a class="link-repo" href="https://github.com/Its-Just-Nans/sportiva" target="_blank"> All free ! </a>
        </button>
    </header>
    <main>
        <section>
            <Profile />
        </section>
        <section class="activity-feed">
            <h3>Activities ({activities.length})</h3>
            {activities.toReversed().map((activity) => <Activity activity={activity} user={user} />)}
        </section>
        <aside>
            <Misc />
        </aside>
    </main>
</Layout>

<style>
    .link-repo {
        color: white;
        text-decoration: none;
    }

    main {
        display: grid;
        grid-template-columns: 250px 1fr 300px;
        grid-template-rows: max-content auto;
        gap: 20px;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        height: 90%;
    }

    header {
        grid-column: 1 / -1;
        display: flex;
        justify-content: space-around;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #e5e5e5;
    }

    header img {
        height: 30px;
    }

    nav ul {
        display: flex;
        list-style-type: none;
        gap: 20px;
    }

    button {
        background-color: #fc5200;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }
    @media screen and (max-width: 768px) {
        main {
            grid-template-columns: 1fr;
            grid-template-rows: max-content auto auto;
        }
        section::after {
            content: "------";
            text-align: center;
            display: block;
            clear: both;
        }
        nav ul {
            gap: 10px;
            padding-inline-start: 5px;
        }

        button {
            padding: 10px 10px;
        }
    }
</style>
