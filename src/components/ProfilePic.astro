---
import { user } from "../data";

interface Props {
    column?: boolean;
    tiny?: boolean;
}

const { column = false, tiny = false } = Astro.props;
---

<div class="profile" class:list={[{ "profile-column": column, "profile-tiny": tiny }]}>
    <img src={user.avatar} alt={user.name} />
    <h4>{user.name}</h4>
</div>

<style>
    .profile {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .profile-column {
        flex-direction: column;
    }
    .profile img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }
    .profile-tiny img {
        width: 40px;
        height: 40px;
    }
    @media screen and (max-width: 768px) {
        .profile img {
            width: 50px;
            height: 50px;
        }
        .profile-tiny img {
            width: 30px;
            height: 30px;
        }
    }
</style>
